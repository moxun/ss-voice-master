<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="200dp">


    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:background="@drawable/gift_bg_express_dialog"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/common_input_close_bt" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="今天天气很好"
            android:textColor="#ff707070"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginTop="16dp"
            android:background="#F3F3F3"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="此时此刻想对心仪的那个Ta说点什么呢？"
                android:maxLength="30"
                android:gravity="top"
                android:textColorHint="#ff8e8e8e"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="最多30字"
                android:textColor="#ff8e8e8e"
                android:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:background="@drawable/bg_express_bt"
            android:gravity="center"
            android:text="表白"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/common_avter_placeholder" />

</FrameLayout>