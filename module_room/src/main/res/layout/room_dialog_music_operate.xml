<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/room_bg_operate_music"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.xiaweizi.marquee.MarqueeTextView
            android:id="@+id/tv_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="18dp"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_music_operate_close"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量"
            android:textColor="#ff888888"
            android:textSize="13sp"
            />
        <SeekBar
            android:id="@+id/bgm_volume_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="3dp"
            android:progress="50"
            android:progressDrawable="@drawable/common_seek_bar_bg"
            android:thumb="@drawable/common_thumb" />

        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/iv_change_play_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_music_operate_pause"/>
        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_music_operate_next"
            />
        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/iv_change_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_music_operate_play_mode"
            />
    </LinearLayout>

</LinearLayout>
