<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/content_fl">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:background="@drawable/bg_dialog_cj_integral"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/common_back_arrow_white"
            android:layout_marginBottom="340dp"/>

        <TextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@id/back_iv"
            app:layout_constraintBottom_toBottomOf="@id/back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="许愿池"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/tv_open_box_record"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_cj_integral_exchange_records"
            app:layout_constraintTop_toTopOf="@id/back_iv"
            app:layout_constraintBottom_toBottomOf="@id/back_iv"
            app:layout_constraintEnd_toStartOf="@id/tv_rule"/>
        <ImageView
            android:id="@+id/tv_rule"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_cj_integral_rule"
            app:layout_constraintTop_toTopOf="@id/back_iv"
            app:layout_constraintBottom_toBottomOf="@id/back_iv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_xyc_number"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="当前许愿箱：8个"
            android:textColor="#ffffe39e"
            android:background="@drawable/bg_cj_top_banner"
            android:layout_width="326dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="13sp"
            />


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_cj_intrgral_xuyuanchi"
            app:layout_constraintTop_toBottomOf="@id/tv_xyc_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv_open_box"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/icon_cj_intrgral_unbox"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>