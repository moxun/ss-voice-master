<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_face"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_face"
        app:layout_constraintTop_toTopOf="@id/iv_face"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星河男神-新厅开业"
        android:layout_marginStart="10dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_hot_value"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456热度"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/room_icon_small_hot_yellow"
        android:drawablePadding="2dp"
        android:textColor="#ffaca6b2"
        android:textSize="13sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>