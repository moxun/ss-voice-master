<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC2E2945"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/root_fl"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="音乐"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_add_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:layout_marginStart="10dp"
                android:background="@drawable/room_icon_music_add" />
        </FrameLayout>
        <!--       <com.miaomi.fenbei.base.widget.search.SearchView-->
        <!--           android:layout_marginLeft="16dp"-->
        <!--           android:layout_marginRight="16dp"-->
        <!--           android:layout_marginTop="10dp"-->
        <!--           android:layout_marginBottom="10dp"-->
        <!--           android:focusable="true"-->
        <!--           android:focusableInTouchMode="true"-->
        <!--           android:id="@+id/sv_search"-->
        <!--           android:layout_width="match_parent"-->
        <!--           android:layout_height="32dp"-->
        <!--           android:background="@drawable/room_common_bg_search"/>-->
        <com.miaomi.fenbei.base.widget.xrecyclerview.XRecyclerView
            android:id="@+id/music_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/play_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:paddingTop="10dp">

            <com.xiaweizi.marquee.MarqueeTextView
                android:id="@+id/music_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:text="六等星的夜" />


            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/room_icon_music_operate_start" />


            <ImageView
                android:id="@+id/repeat_mode_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/room_icon_music_repeat_all" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



