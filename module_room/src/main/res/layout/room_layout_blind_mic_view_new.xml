<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.miaomi.fenbei.room.widget.BlindMicItemView
        android:id="@+id/mic_1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/mic_1_layout"
        app:layout_constraintBottom_toBottomOf="@id/mic_1_layout"
        app:layout_constraintStart_toEndOf="@id/mic_1_layout"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_blind_status_1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:text="自我介绍"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/room_bg_blind_status"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tv_blind_status_2"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:text="嘉宾互动"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/room_bg_blind_status"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tv_blind_status_3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:text="权利反转"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/room_bg_blind_status"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tv_blind_status_4"
            android:layout_marginStart="4dp"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:text="牵手成功"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/room_bg_blind_status"
            android:textSize="11sp"
            />
    </LinearLayout>
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginRight="@dimen/dd_dp20"
            android:layout_marginLeft="@dimen/dd_dp20"
            android:background="@drawable/bg_blind_mic_all"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingConstraints"
           />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           >
            <com.miaomi.fenbei.room.widget.BlindMicItemView
                android:id="@+id/mic_4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dd_dp5"
               />
            <com.miaomi.fenbei.room.widget.BlindMicItemView
                android:id="@+id/mic_5_layout"
                android:layout_toRightOf="@+id/mic_4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dp5"
                />
            <ImageView
                android:id="@+id/iv_line_3"
                android:layout_width="45dp"
                android:layout_height="102dp"
                android:layout_marginRight="@dimen/dd_dp2"
                android:layout_marginTop="@dimen/dd_dp60"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/mic_5_layout"
                android:src="@drawable/icon_room_line03"
                />
            <ImageView
                android:id="@+id/iv_line_4"
                android:layout_width="45dp"
                android:layout_height="102dp"
                android:layout_marginLeft="@dimen/dd_dp2"
                android:visibility="invisible"
                android:src="@drawable/icon_room_line04"
                android:layout_marginTop="@dimen/dd_dp60"
                android:layout_toRightOf="@+id/mic_4_layout"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
        <View
            android:id="@+id/view_mic"
            android:layout_marginBottom="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/iv_line_5"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@+id/view_mic"
            android:src="@drawable/icon_room_line05"
            />
        <ImageView
            android:id="@+id/iv_line_2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="75dp"
            android:visibility="invisible"
            android:src="@drawable/icon_room_line02"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/view_mic"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:id="@+id/iv_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp20"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="@dimen/dd_dp10"
            android:src="@drawable/icon_room_line01"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/view_mic"
            />
        <ImageView
            android:id="@+id/iv_line_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp20"
            android:layout_marginBottom="90dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_marginRight="55dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/view_mic"
            android:src="@drawable/icon_room_line01"
            />

        <com.miaomi.fenbei.room.widget.BlindMicItemView
            android:id="@+id/mic_3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/sp20"
            android:layout_marginTop="@dimen/dd_dp60"
           />

        <com.miaomi.fenbei.room.widget.BlindMicItemView
            android:id="@+id/mic_6_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dd_dp60"
            android:layout_marginRight="@dimen/sp20"
            />
        <com.miaomi.fenbei.room.widget.BlindMicItemView
            android:id="@+id/mic_2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dd_dp40"
            />
        <com.miaomi.fenbei.room.widget.BlindMicItemView
            android:id="@+id/mic_7_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dd_dp40"
            />
        <com.miaomi.fenbei.room.widget.BlindMicItemView
            android:id="@+id/mic_8_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            />

    </RelativeLayout>

</merge>
