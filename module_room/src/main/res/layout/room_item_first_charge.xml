<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"

   >
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
     android:paddingTop="9dp"
     android:paddingBottom="9dp"
     android:layout_weight="1"
     android:orientation="horizontal"
     android:background="@drawable/room_chat_history_bg"
     >
      <TextView
          android:id="@+id/name"
          android:lineSpacingExtra="8dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textColor="#ffffff"
          android:textSize="12dp" />
 </LinearLayout>

  <TextView
      android:id="@+id/tv_flirt"
      android:layout_width="@dimen/dd_dp50"
      android:layout_height="21dp"
      android:textColor="#FFFFFF"
      android:layout_marginStart="@dimen/dd_dp6"
      android:background="@drawable/bg_icon_btn_flirt"
      android:textSize="@dimen/dd_dp11"
      android:text="去撩Ta"
      android:gravity="center"/>
</LinearLayout>