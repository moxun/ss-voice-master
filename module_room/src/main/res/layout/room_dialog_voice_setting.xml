<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_room_bottom_dialog"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调音台"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />


        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐音量"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />

            <SeekBar
                android:id="@+id/bgm_volume_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:maxHeight="3dp"
                android:progress="50"
                android:progressDrawable="@drawable/common_seek_bar_bg"
                android:thumb="@drawable/common_thumb"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通话音量"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/record_volume_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:maxHeight="3dp"
                android:progress="50"
                android:progressDrawable="@drawable/common_seek_bar_bg"
                android:thumb="@drawable/common_thumb"
                />

        </LinearLayout>



     <LinearLayout
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="耳返"
             android:textColor="@color/white"
             android:textSize="14dp" />

         <CheckBox
             android:layout_marginStart="10dp"
             android:id="@+id/ear_monitoring_st"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:button="@null"
             android:text=""
             android:textColor="@color/white"
             android:textSize="14dp"
             android:drawablePadding="4dp"
             android:drawableStart="@drawable/icon_room_voice"/>
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静音"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <CheckBox
            android:layout_marginStart="10dp"
            android:id="@+id/voice_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:button="@null"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp"
            android:drawableStart="@drawable/icon_room_voice"
            android:drawablePadding="4dp"
            />

    </LinearLayout>

</LinearLayout>