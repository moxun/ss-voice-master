<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bg_purchase"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="305dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:background="@drawable/room_bg_zs_buy_ticket"
        android:gravity="center_horizontal">
<!--      -->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_bug_water_close"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dd_dp20"
            android:layout_marginEnd="@dimen/dd_dp20"
           />

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/room_icon_watering_can"/>

        </FrameLayout>
        <TextView
            android:id="@+id/tv_water_price"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/dd_dp13"
            android:text="此次购买需要10钻石"
            android:background="@drawable/room_bg_zs_buy_number"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">
            <TextView
                android:id="@+id/tv_cut"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:gravity="center"
                android:textColor="#FB2FC8"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:background="@drawable/room_bg_zs_buy_area"
                />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="1"
                android:maxLength="7"
                android:inputType="number"
                android:minWidth="36dp"
                android:gravity="center"
                android:textColor="#FB2FC8"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:background="@drawable/room_bg_zs_buy_area"
                />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:gravity="center"
                android:textColor="#FB2FC8"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:background="@drawable/room_bg_zs_buy_area"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bug"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_icon_bug_water_bt"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻石：0"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去充值 >"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_water_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:gravity="center"
        />
<!--    android:background="@drawable/room_bg_other_title"-->
</FrameLayout>