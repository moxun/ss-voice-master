        android:id="@+id/send_gift_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/room_icon_bottom_gift_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/word_chat_btn"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:text="聊聊天~"
        android:textColor="#ffb0a0c2"
        android:gravity="center"
        android:textSize="13sp"
        android:background="@drawable/bg_room_bottom_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <TextView
        android:id="@+id/msg_notice"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/room_red_point"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/msg_btn"
        app:layout_constraintTop_toTopOf="@+id/msg_btn" />
