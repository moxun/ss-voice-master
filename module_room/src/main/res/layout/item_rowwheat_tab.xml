<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingRight="@dimen/dd_dp5"
   >
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_objetc_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:background="@drawable/room_pop_shangmai_select"
            />
    </FrameLayout>

       <TextView
           android:id="@+id/tv_object_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/dd_dp15"
           android:singleLine="true"
           android:maxEms="4"
           android:layout_marginTop="@dimen/dd_dp6"
           android:textColor="#7FFFFFFF"
           android:text="热门"
           />


    </LinearLayout>


