<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="311dp"
    android:layout_height="232dp"
    android:background="@drawable/common_bg_dialog_common"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="灵兽牌设置"
        android:textColor="#ff333333"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
       <LinearLayout
           android:orientation="vertical"
           android:gravity="center_horizontal|bottom"
           android:paddingBottom="8dp"
           android:id="@+id/fl_type_1"
           android:layout_margin="4dp"
           android:layout_width="64dp"
           android:layout_height="88dp"
           android:background="@drawable/bg_game_xx_setting">
           <ImageView
               android:src="@drawable/icon_xx_setting_type_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="一只灵兽"
               android:textColor="#ff333333"
               android:textSize="11sp"
               />
       </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:id="@+id/fl_type_2"
            android:layout_margin="4dp"
            android:layout_width="64dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_game_xx_setting">
            <ImageView
                android:src="@drawable/icon_xx_setting_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二只灵兽"
                android:textColor="#ff333333"
                android:textSize="11sp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:id="@+id/fl_type_3"
            android:layout_margin="4dp"
            android:layout_width="64dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_game_xx_setting">
            <ImageView
                android:src="@drawable/icon_xx_setting_type_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三只灵兽"
                android:textColor="#ff333333"
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:id="@+id/fl_type_5"
            android:layout_margin="4dp"
            android:layout_width="64dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_game_xx_setting">
            <ImageView
                android:src="@drawable/icon_xx_setting_type_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五只灵兽"
                android:textColor="#ff333333"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/icon_xx_setting_sure"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

</LinearLayout>