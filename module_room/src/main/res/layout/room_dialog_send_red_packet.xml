<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="325dp"
    tools:ignore="MissingPrefix"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    android:background="@drawable/bg_room_red_pack">

    <FrameLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:text="手气红包"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26dp" />
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/room_icon_red_pack_change"/>
    </FrameLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#F6F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="30dp"
        app:bl_solid_color="#22FFFFFF">

        <TextView
            android:id="@+id/send_diamond_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总钻石"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/send_diamond_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLength="8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="100~2000"
            android:textColorHint="#60FFFFFF"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:text="钻石"/>

    </LinearLayout>

    <TextView
        android:id="@+id/balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钻石余额：1234钻石"
        android:textColor="@color/white"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:padding="15dp"
        android:background="#F6F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="30dp"
        app:bl_solid_color="#22FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包个数"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/num_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLength="8"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="0"
            android:textColorHint="#60FFFFFF"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:text="个"/>

    </LinearLayout>
    <TextView
        android:id="@+id/num_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红包数量"
        android:textColor="@color/white"
        android:textSize="12dp" />


    <EditText
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="#F6F4F4"
        android:textSize="16dp"
        android:hint="房间热度张涨涨"
        android:textColorHint="#a8a8a8"
        android:maxLength="20"
        android:textColor="#222"
        android:singleLine="true"
        android:ellipsize="end"
        app:bl_solid_color="#22FFFFFF"
        app:bl_corners_radius="6dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="#F6F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="6dp"
        app:bl_solid_color="#22FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启全服广播"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/realm_notice_price_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            android:textColor="#a8a8a8"
            android:text="200钻石"/>

        <Switch
            android:id="@+id/full_service_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="#F6F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="30dp"
        app:bl_solid_color="#22FFFFFF"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="口令："
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <EditText
            android:maxLength="4"
            android:background="@null"
            android:id="@+id/password_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            android:inputType="number"
            android:textColor="#FFFFFF" />


    </LinearLayout>
    <TextView
        android:id="@+id/total_diamond_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="0钻石"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:text="塞钱进红包"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:bl_solid_color="@color/white"
        app:bl_corners_radius="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="left"
        android:lineSpacingExtra="10dp"
        
        android:text="红包说明：\n1.发送红包将收取所发金额1%的手续费，\n2.未领取的红包，将发出60s后退至「钻石账户」"
        android:textColor="@color/white"
        android:textSize="12dp" />

</LinearLayout>