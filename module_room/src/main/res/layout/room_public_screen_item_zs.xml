<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/zs_fl_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
   android:paddingLeft="@dimen/sp10"
    android:paddingTop="@dimen/dd_dp13"
    android:paddingBottom="@dimen/dd_dp13"
    >
<!--    android:background="@drawable/room_bg_item_gongping_zs"-->
    <TextView
        android:id="@+id/zs_name"
        android:paddingEnd="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#5177D5"
        android:lineSpacingExtra="2dp"
        android:textSize="12dp"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/zs_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</FrameLayout>