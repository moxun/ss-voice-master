<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#CC000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
           android:layout_margin="@dimen/dd_dp15"
            android:textSize="@dimen/dd_dp16"
            android:text="相亲嘉宾"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_object"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp15"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_margin="@dimen/dd_dp15"
            android:textSize="@dimen/dd_dp16"
            android:text="相亲对象"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_xq_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp15"
            android:orientation="horizontal"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginBottom="@dimen/dd_dp15"
        android:orientation="horizontal">
      <TextView
       android:id="@+id/tv_mic_go"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dimen_size_44"
       android:textSize="@dimen/dd_dp16"
       android:textColor="#FFFFFF"
       android:layout_marginRight="@dimen/dd_dp30"
       android:layout_marginLeft="@dimen/dd_dp30"

       android:background="@drawable/base_bg_shangmai"
       android:gravity="center"
       android:text="申请上麦"/>
        <TextView
            android:id="@+id/tv_k_out"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_44"
            android:textSize="@dimen/dd_dp16"
            android:textColor="#FFFFFF"
            android:layout_marginRight="@dimen/dd_dp8"
            android:layout_marginLeft="@dimen/dd_dp30"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/base_bg_tichu"
            android:gravity="center"
            android:text="踢出"/>
        <TextView
            android:id="@+id/tv_k_baomai"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_44"
            android:textSize="@dimen/dd_dp16"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dd_dp8"
            android:layout_marginLeft="@dimen/dd_dp8"
            android:background="@drawable/base_bg_baomai"
            android:gravity="center"
            android:text="抱麦"/>
        <TextView
            android:id="@+id/tv_k_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_44"
            android:textSize="@dimen/dd_dp16"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dd_dp30"
            android:layout_marginLeft="@dimen/dd_dp8"
            android:background="@drawable/base_bg_shangmai"
            android:gravity="center"
            android:text="置顶"/>

    </LinearLayout>

</LinearLayout>
