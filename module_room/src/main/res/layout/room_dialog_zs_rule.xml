<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:orientation="vertical"
        android:background="@drawable/room_bg_zs_buy_ticket">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/dd_dp30"
            android:layout_marginTop="@dimen/dd_dp25"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/room_icon_zs_back"/>

        <TextView
            android:id="@+id/tv_rule"
            android:padding="15dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:text=""
            android:lineSpacingExtra="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
           />
<!--        android:background="@drawable/room_shape_bg_zs_rule"-->
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_title_rule"/>

</FrameLayout>