<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <gradient  android:startColor="#ff93b7ed" android:endColor="#ff5c7fe3" android:angle="0" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <gradient  android:startColor="#ffff5bb5" android:endColor="#ffff85fb" android:angle="0" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>