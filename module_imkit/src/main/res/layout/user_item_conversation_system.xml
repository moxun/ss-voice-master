<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="16dp"
   >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_avter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/base_icon_new_conversation_system"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:text="系统消息"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5086"
                android:paddingLeft="@dimen/dd_dp2"
                android:paddingRight="@dimen/dd_dp2"
                android:background="@drawable/bg_find_in_official_im"
                android:textSize="@dimen/dd_dp9"
                android:layout_marginLeft="@dimen/dd_dp9"
                android:text="官方"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_gravity="right|center_vertical"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#987DB5"
                android:textSize="12dp"
                android:text="1分钟前"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#987DB5"
            android:textSize="12dp"
            android:text="您有0条系统消息"
            android:singleLine="true"/>
            <TextView
                android:layout_gravity="right"
                android:id="@+id/tv_unread"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:minWidth="16dp"
                android:layout_height="16dp"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:text="1"
                android:layout_marginRight="@dimen/dd_dp3"
                android:background="@drawable/common_redpoint_bg"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
