<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_content"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/emoji_text"
        android:id="@+id/emoji_icon"
        tools:src="#323"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/emoji_text"
        app:layout_constraintLeft_toLeftOf="@+id/emoji_icon"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/emoji_icon"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/emoji_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>

