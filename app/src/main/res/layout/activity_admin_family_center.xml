<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121a2a"
   >
    <LinearLayout
        android:id="@+id/ll_top"
        android:paddingTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dd_dp5"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:padding="8dp"
                android:src="@drawable/common_back_arrow_white"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家族详情"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dp15"
            android:layout_marginLeft="@dimen/dd_dp16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_family_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="家族名字家族名字 ID:800808"/>
                <TextView
                    android:id="@+id/tv_leader_name"
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:text="族长：我是路人甲乙丙丁"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dd_dp14"
                        android:layout_height="@dimen/dd_dp13"
                        android:layout_marginRight="@dimen/dd_dp5"
                        android:src="@drawable/f_icon_id"/>
                    <TextView
                        android:id="@+id/tv_family_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:textSize="14sp"
                        android:text="id"/>
                    <ImageView
                        android:layout_width="@dimen/dd_dp14"
                        android:layout_height="@dimen/dd_dp13"
                        android:layout_marginRight="@dimen/dd_dp5"
                        android:layout_marginLeft="@dimen/dd_dp15"
                        android:src="@drawable/f_icon_fire"/>
                    <TextView
                        android:id="@+id/tv_money_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:textSize="14sp"
                        android:text="人气值：123123"/>
                    <LinearLayout
                        android:id="@+id/member_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_invite"
                            android:layout_marginLeft="20dp"
                            android:layout_width="88dp"
                            android:layout_height="26dp"
                            android:background="@drawable/bg_family_invite"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginRight="17dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_notice"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8F71B7"
            android:padding="@dimen/dd_dp10"
            android:layout_marginLeft="@dimen/dd_dp16"
            android:layout_marginRight="@dimen/dd_dp16"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:singleLine="true"
            android:text="[公告] 我是公告内容我是公告内容公告内容公告内容公告内容..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
               android:layout_marginLeft="@dimen/dd_dp16"
                android:layout_marginRight="@dimen/dd_dp16"
                android:layout_marginTop="@dimen/dd_dp16"
                android:background="@drawable/bg_family_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_general"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.miaomi.fenbei.base.widget.DCBTextView
                        android:id="@+id/tv_total_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:text="无排名"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/dd_dp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="总榜Top"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.miaomi.fenbei.base.widget.DCBTextView
                        android:id="@+id/tv_month_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:text="无排名"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dd_dp3"
                        android:gravity="center"
                        android:text="月榜Top"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.miaomi.fenbei.base.widget.DCBTextView
                        android:id="@+id/tv_member_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dd_dp3"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="成员"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.miaomi.fenbei.base.widget.DCBTextView
                        android:id="@+id/tv_room_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F71B7"
                        android:layout_marginTop="@dimen/dd_dp3"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="房间"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dd_dp16"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginRight="@dimen/dd_dp16"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:background="@drawable/bg_family_content">
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:drawableEnd="@drawable/f_icon_more"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:text="编辑家族信息"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:background="#5E2C94"/>
        <TextView
            android:id="@+id/tv_admin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:drawableEnd="@drawable/f_icon_more"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:text="管理员"
            android:textColor="#FFFFFF"
            android:textSize="14dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#5E2C94"/>
        <LinearLayout
            android:id="@+id/ll_apply_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dp50"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="申请通知"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_apply_num"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:minWidth="16dp"
                android:layout_height="16dp"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:text="1"
                android:layout_marginRight="@dimen/dd_dp5"
                android:background="@drawable/common_redpoint_bg"
                />
            <ImageView
                android:src="@drawable/f_icon_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:background="#5E2C94"/>
        <TextView
            android:id="@+id/tv_proportion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:drawableEnd="@drawable/f_icon_more"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:text="设置分成比例"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
    </LinearLayout>
        <TextView
            android:id="@+id/tv_outfamily"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp45"
            android:text="解散家族"
            android:textColor="#ED52F9"
            android:background="@drawable/common_button_enabled_style"
            android:layout_margin="@dimen/dd_dp20"
            android:textSize="@dimen/dd_dp15"
            android:gravity="center"
            />

</LinearLayout>