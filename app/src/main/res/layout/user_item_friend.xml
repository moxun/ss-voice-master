<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp">
        <ImageView
            android:id="@+id/iv_avter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/common_avter_placeholder"/>
        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:textColor="#FD67FF"
            android:textSize="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/user_bg_hot_chat_status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:textColor="#FD67FF"
            android:textSize="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/user_bg_hot_chat_status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/user_bg_hot_chat_status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_toRightOf="@id/iv_avter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:text="大萌江湖酱"
                    />

                <com.miaomi.fenbei.base.widget.SexAndAgeView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="6dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="5dp"
                    android:text="22"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp10"
                    android:drawableStart="@drawable/base_bg_sex"/>
                <com.miaomi.fenbei.base.widget.LevelView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/iv_gongxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/common_bg_level_wealth"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/iv_meili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:gravity="center_vertical"
                    android:src="@drawable/common_bg_level_charm"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#987DB5"
                android:textSize="12dp"
                android:text="今晚几点开播呀"
                android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#5E2C94"
        />
</LinearLayout>