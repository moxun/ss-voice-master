<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="@dimen/dd_dp20"
    android:orientation="horizontal"
   >
     <ImageView
         android:id="@+id/iv_avter"
         android:layout_width="32dp"
         android:layout_height="32dp"
         android:layout_marginTop="@dimen/dd_dp5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B2FFFFFF"
                android:text="名字"
                android:layout_weight="1"
                android:textSize="@dimen/dd_dp13"/>
            <TextView
                android:id="@+id/tv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F00"
                android:textSize="@dimen/dd_dp13"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dd_dp15"
                android:text="删除"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dp5"
            android:layout_marginBottom="@dimen/dd_dp5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dd_dp14"
                android:text="回复 "/>
            <TextView
                android:id="@+id/tv_hf_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dd_dp14"
                android:textColor="#7FFFFFFF"
                android:text="名字："/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dd_dp14"
                android:text="回复"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="23-13"
            android:textSize="@dimen/dd_dp11"/>
    </LinearLayout>
</LinearLayout>