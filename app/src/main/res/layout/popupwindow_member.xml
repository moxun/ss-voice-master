<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp"
    android:layout_height="130dp"
    android:padding="@dimen/dd_dp10"
    android:background="@drawable/f_more_bg"

    >
<!--    android:background="@drawable/homepage_bg_more"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/f_more_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dp10"/>
        <TextView
            android:id="@+id/oprate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dd_dp14"
            android:text="管理"
            android:gravity="center"
            android:textColor="#333333"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/f_more_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dp10"/>
        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:textSize="@dimen/dd_dp14"
            android:text="移除此人"
            android:gravity="center"
            android:textColor="#333333"/>
    </LinearLayout>


</LinearLayout>