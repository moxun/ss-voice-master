<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121a2a"
    android:gravity="center_horizontal">

    <include layout="@layout/common_toolbar"/>


    <EditText
        android:layout_marginTop="25dp"
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:hint="请输入您的手机号"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="#33D589EE"
       />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/vcode_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@null"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/vcode_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_obtain_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="264dp"
        android:layout_height="42dp"
        android:layout_below="@+id/et_code"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="确认"
        android:textSize="16dp"
        android:textColor="@color/text_color_bt"
        android:background="@drawable/common_button_enabled_style"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        />

</LinearLayout>