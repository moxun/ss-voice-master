<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="260dp"
    android:layout_height="380dp"
    android:background="@drawable/bg_dialog_adolescent_model"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    >


    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:maxWidth="180dp"
        android:gravity="left"
        android:lineSpacingExtra="6dp"
        android:text="@string/adolescent_model_reminder"
        android:textColor="#999999"
        android:textSize="13dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/adolescent_model_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="进入青少年模式"
        android:textColor="#3B3D3F"
        android:textStyle="bold"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/sure_tv"
        android:layout_width="120dp"
        android:layout_marginTop="16dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"

        android:text="我知道了"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:background="@drawable/common_button_enabled_style_new"/>

</LinearLayout>



