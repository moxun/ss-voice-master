<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_avter"
        android:layout_width="36dp"
        android:layout_height="36dp"
        />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_status"
        app:layout_constraintStart_toEndOf="@id/iv_avter"
        app:layout_constraintTop_toTopOf="@id/iv_avter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收到"
        android:textColor="#B3FFFFFF"
        android:textSize="13sp"
        />

    <TextView
        app:layout_constraintStart_toEndOf="@id/tv_status"
        app:layout_constraintTop_toTopOf="@id/tv_status"
        app:layout_constraintBottom_toBottomOf="@id/tv_status"
        android:layout_marginStart="4dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="一二三四..."
        android:textColor="#FFFFFF"
        android:textSize="13dp"/>

    <TextView

        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/tv_status"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019.08.07 02:22"
        android:textColor="#80FFFFFF"
        android:textSize="11dp" />

    <com.miaomi.fenbei.base.widget.DCBTextView
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:maxLines="1"
        android:text="(5200钻石)"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <com.miaomi.fenbei.base.widget.DCBTextView
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/iv_gift_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp"
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12dp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_gift_icon"
        android:layout_width="31dp"
        android:layout_height="31dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
