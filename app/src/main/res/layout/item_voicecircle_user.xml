<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/sq_list_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/sp10"
    android:paddingTop="@dimen/dd_dp8"
    android:paddingRight="@dimen/sp10"
    android:paddingBottom="@dimen/dd_dp8">

    <ImageView
        android:id="@+id/iv_avter"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_room_lable"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dd_dp20"
                android:gravity="center"
                android:textColor="@color/white"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <LinearLayout
                android:id="@+id/in_room_ll"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="7dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/iv_room_gif"
                    android:layout_width="10dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/online_num"
                    app:layout_constraintStart_toStartOf="@id/chat_icon"
                    app:layout_constraintTop_toTopOf="@id/online_num" />

                <com.miaomi.fenbei.base.widget.DCBTextView
                    android:id="@+id/online_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="12345"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_room_toppic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="这里是个性签名如果字太多的话..."
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <com.miaomi.fenbei.base.widget.HeartMeView
            android:layout_marginTop="10dp"
            android:id="@+id/heart_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

</LinearLayout>
