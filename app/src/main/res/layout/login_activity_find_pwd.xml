<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121a2a"
    android:gravity="center_horizontal">
    <include layout="@layout/common_toolbar"/>
    <EditText
        android:id="@+id/et_user_id"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/base_bg_bt_translate"
        android:hint="请输入账号"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/base_bg_bt_translate"
        android:hint="请输入绑定手机"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        android:textSize="16dp"
        />


    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/vcode_ll"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/base_bg_bt_translate"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >
        <EditText
            android:id="@+id/vcode_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/send_vcode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_pwd"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/base_bg_bt_translate"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/et_re_pwd"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/base_bg_bt_translate"
        android:hint="请确认密码"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        />


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="264dp"
        android:layout_height="42dp"
        android:layout_margin="15dp"
        android:background="@drawable/common_button_enabled_style"
        android:text="确认"
        android:textSize="16dp"
        android:textColor="@color/text_color_bt"
        android:gravity="center"
        />
    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="16dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        />
</LinearLayout>