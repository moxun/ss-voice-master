<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg_dialog_common"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关闭密码"
            android:textColor="#FF222222"
            android:textSize="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="您确定要关闭兑换密码吗？"
            android:textColor="#ff555555"
            android:textSize="14dp"
            />
        <com.miaomi.fenbei.base.widget.PayPwdEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="为了您的账户安全建议设置兑换密码，若确定要关闭兑换密码请输入密码进行关闭"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:paddingStart="39dp"
            android:paddingTop="10dp"
            android:paddingEnd="39dp"
            android:paddingBottom="10dp"
            android:text="取消"
            android:textColor="#555"
            android:textSize="16dp"
            app:bl_corners_radius="22dp"
            app:bl_solid_color="#F5F7F9" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:paddingStart="39dp"
            android:paddingTop="10dp"
            android:paddingEnd="39dp"
            android:paddingBottom="10dp"
            android:text="关闭"
            android:textColor="#fff"
            android:textSize="16dp"
            app:bl_corners_radius="22dp"
            app:bl_solid_color="@color/colorPrimary" />
    </LinearLayout>

</RelativeLayout>