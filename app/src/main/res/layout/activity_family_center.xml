<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121a2a"
    android:id="@+id/ll_root">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                       >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="@dimen/dd_dp15"
                            >
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/iv_back"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="@dimen/dd_dp5"
                                android:layout_marginLeft="@dimen/dd_dp8"
                                android:padding="8dp"
                                android:src="@drawable/common_back_arrow_white"
                                />
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:visibility="gone"
                               android:layout_alignParentRight="true"
                               android:gravity="center_vertical">
                               <TextView
                                   android:id="@+id/tv_apply_list"
                                   android:layout_width="88dp"
                                   android:layout_height="26dp"
                                   android:background="@drawable/bg_family_apply"
                                   android:gravity="center"/>
                               <ImageView
                                   android:id="@+id/iv_edit"
                                   android:layout_width="48dp"
                                   android:layout_height="48dp"
                                   android:paddingBottom="15dp"
                                   android:paddingTop="15dp"
                                   android:src="@drawable/bg_toolbar_edit"
                                   />
                               <ImageView
                                   android:id="@+id/iv_out"
                                   android:layout_width="48dp"
                                   android:layout_height="48dp"
                                   android:paddingBottom="15dp"
                                   android:paddingTop="15dp"
                                   android:src="@drawable/icon_logout_family"
                                   />
                           </LinearLayout>
                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="家族详情"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="18sp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dd_dp16"
                            android:layout_marginTop="@dimen/dd_dp15"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_family_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:text="家族名字家族名字 ID:800808"/>
                                <TextView
                                    android:id="@+id/tv_leader_name"
                                    android:layout_marginTop="17dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:visibility="gone"
                                    android:textSize="12sp"
                                    android:text="族长：我是路人甲乙丙丁"/>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/dd_dp14"
                                        android:layout_height="@dimen/dd_dp13"
                                        android:layout_marginRight="@dimen/dd_dp5"
                                        android:src="@drawable/f_icon_id"/>
                                    <TextView
                                        android:id="@+id/tv_family_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:text="id"/>
                                    <ImageView
                                        android:layout_width="@dimen/dd_dp14"
                                        android:layout_height="@dimen/dd_dp13"
                                        android:layout_marginRight="@dimen/dd_dp5"
                                        android:layout_marginLeft="@dimen/dd_dp15"
                                        android:src="@drawable/f_icon_fire"/>
                                    <TextView
                                        android:id="@+id/tv_money_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:text="人气值：123123"/>
                                    <LinearLayout
                                        android:id="@+id/member_ll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        >
                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/tv_invite"
                                            android:layout_marginLeft="20dp"
                                            android:layout_width="88dp"
                                            android:layout_height="26dp"
                                            android:background="@drawable/bg_family_invite"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="17dp"
                                >
                                <ImageView
                                    android:background="@drawable/bg_find_in_icon"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:layout_gravity="center"/>
                                <ImageView
                                    android:id="@+id/iv_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/common_avter_placeholder"
                                    />
                            </FrameLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_notice"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:paddingBottom="@dimen/dd_dp10"
                            android:paddingLeft="@dimen/dd_dp10"
                            android:paddingTop="@dimen/dd_dp10"
                            android:paddingRight="@dimen/dd_dp50"
                            android:layout_marginLeft="@dimen/dd_dp16"
                            android:layout_marginRight="@dimen/dd_dp16"
                            android:textSize="12sp"
                            android:background="@drawable/icon_family_rank_bg"
                            android:drawablePadding="4dp"
                            android:singleLine="true"
                            android:text="[公告] 我是公告内容我是公告内容公告内容公告内容公告内容..."/>
<!--                        android:drawableLeft="@drawable/icon_family_notice"-->

                    </LinearLayout>

                </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.miaomi.fenbei.base.widget.DCBTextView
                    android:background="@drawable/bg_family_content"
                    android:id="@+id/tv_total_rank"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dd_dp15"
                    android:layout_marginLeft="@dimen/dd_dp14"
                    android:layout_height="53dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="无排名"
                    />
                <com.miaomi.fenbei.base.widget.DCBTextView
                    android:id="@+id/tv_month_rank"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="53dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/dd_dp14"
                    android:gravity="center"
                    android:text="无排名"
                    android:background="@drawable/bg_family_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_family_member"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dp16"
                android:layout_marginRight="@dimen/dd_dp16"
                android:background="@drawable/bg_family_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableRight="@drawable/f_icon_more"
                    android:drawablePadding="4dp"
                    android:text="家族人员（98人）"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dd_dp15" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_family_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dp15"
                android:text="家族房间"
                android:textStyle="bold"
                android:drawableRight="@drawable/f_icon_more"
                android:layout_marginLeft="@dimen/dd_dp16"
                android:layout_marginRight="@dimen/dd_dp16"
                android:paddingRight="15dp"
                android:paddingStart="16dp"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/dd_dp15"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_family_content"
                android:textSize="14sp"
                />
            <!--        </com.google.android.material.appbar.AppBarLayout>-->
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/rv_family_room"
                android:layout_marginLeft="@dimen/dd_dp16"
                android:layout_marginRight="@dimen/dd_dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--            <androidx.viewpager.widget.ViewPager-->
<!--                android:id="@+id/vp_family_center"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginLeft="@dimen/dd_dp16"-->
<!--                android:layout_marginRight="@dimen/dd_dp16"-->
<!--                app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dd_dp15"
                android:layout_marginBottom="@dimen/dd_dp20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_apply"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/common_button_enabled_style_new"
                    android:text="申请加入"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
<!--    </androidx.coordinatorlayout.widget.CoordinatorLayout>-->


</LinearLayout>