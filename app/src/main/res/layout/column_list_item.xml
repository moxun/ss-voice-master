<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dd_dp15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_bg_room_edit_common">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp20"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_column_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/sp22"
            android:layout_marginRight="@dimen/dd_dp12"
         />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_coulmn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《深夜酒馆》"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dd_dp16"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tv_coulmn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本档时间：17:00-18:00"
                android:layout_marginTop="@dimen/dd_dp8"
                android:textColor="#66ffffff"
                app:layout_constraintTop_toBottomOf="@+id/tv_coulmn_title"
                android:textSize="@dimen/dd_dp11"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
       <ImageView
           android:id="@+id/iv_del"
           android:layout_width="@dimen/dd_dp10"
           android:layout_height="@dimen/dd_dp10"
           android:layout_marginRight="@dimen/dd_dp15"
           android:layout_marginLeft="@dimen/dd_dp15"
          android:src="@drawable/icon_column_del"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/sp10"
        android:background="#19FFFFFF"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sp12"
        android:layout_margin="@dimen/dd_dp15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_coulmn_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp12"
            android:drawablePadding="@dimen/dd_dp5"
            android:drawableLeft="@drawable/icon_topic_title"
            android:text="今日话题：知音难遇？"
            />
        <TextView
            android:id="@+id/tv_coulmn_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#66FFFFFF"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="@dimen/dd_dp5"
            android:text="以有趣的方式分享音乐的新奇观点与背后的故事，越听越乐趣，伴
随主播的歌声，享受一天的好心情。"
            />
    </LinearLayout>

</LinearLayout>