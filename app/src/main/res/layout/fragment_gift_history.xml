<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_gift_history_sum"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ffffffff"
            android:textSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="月"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_month"
            app:layout_constraintStart_toEndOf="@id/tv_month" />

        <TextView
            android:id="@+id/tv_month_gift_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月共收到"
            android:textColor="#ffffffff"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/tv_month"
            app:layout_constraintTop_toBottomOf="@id/tv_month" />

        <TextView
            android:id="@+id/tv_gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="111款礼物"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/tv_month_gift_des"
            app:layout_constraintStart_toStartOf="@id/tv_month_gift_des"
            app:layout_constraintTop_toBottomOf="@id/tv_month_gift_des" />

        <TextView
            android:id="@+id/tv_month_gift_sun_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="礼物总价值"
            android:textColor="#ffffffff"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_month_gift_des"
            app:layout_constraintStart_toEndOf="@id/tv_month_gift_des"
            app:layout_constraintTop_toTopOf="@id/tv_month_gift_des" />

        <TextView
            android:id="@+id/tv_month_gift_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="111款礼物"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/tv_month_gift_sun_des"
            app:layout_constraintStart_toStartOf="@id/tv_month_gift_sun_des"
            app:layout_constraintTop_toBottomOf="@id/tv_month_gift_sun_des" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.miaomi.fenbei.base.widget.xrecyclerview.XRecyclerView
        android:id="@+id/rv_gift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>