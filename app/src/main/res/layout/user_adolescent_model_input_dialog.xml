<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg_dialog_common"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:gravity="center"
        android:text="青少年模式"
        android:textColor="#FF222222"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="输入密码后可正常使用"
        android:textColor="@color/text_color_55"
        android:textSize="14dp" />

    <com.miaomi.fenbei.base.widget.PayPwdEditText
        android:id="@+id/password_pt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="您当前为青少年模式，22点至次日6点需进行密码验证"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/sure_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="39dp"
        android:paddingTop="10dp"
        android:paddingEnd="39dp"
        android:paddingBottom="10dp"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="16dp"
        app:bl_corners_radius="22dp"
        app:bl_solid_color="@color/colorPrimary"
        android:layout_marginBottom="20dp"/>

</LinearLayout>



