<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121a2a"
    android:orientation="vertical">
    <include layout="@layout/common_toolbar"/>
    <com.miaomi.fenbei.base.widget.search.SearchView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/sv_search"
        android:layout_margin="@dimen/dd_dp16"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_family_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="@dimen/dd_dp16"
            android:layout_marginRight="@dimen/dd_dp16"/> 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
           >
            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dd_dp40"
                android:layout_marginRight="@dimen/dd_dp40"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/dd_dp15"
                android:text="家族长可在该页面设置家族成员的提现分成比例，保存设置后立即生效。"/>
            <TextView
                android:id="@+id/tv_add_admin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dp45"
                android:layout_marginLeft="@dimen/dd_dp20"
                android:layout_marginRight="@dimen/dd_dp20"
                android:background="@drawable/common_button_enabled_style"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dd_dp15"
                android:text="添加成员"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dd_dp15"/>
        </LinearLayout>
    </RelativeLayout>
 
</LinearLayout>