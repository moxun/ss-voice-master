<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/common_back_arrow_white"
        />
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码设置"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_marginTop="54dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:background="@drawable/room_white_8_top_round_bg"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设置兑换密码后，每次兑换钻石操作时，都需要进行密码验证"
            android:textColor="#ff555555"
            android:textSize="12dp"
            />
        <LinearLayout
            android:paddingLeft="42dp"
            android:paddingRight="42dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:textColor="#ff555555"
                android:textSize="16dp"
                />
            <com.miaomi.fenbei.base.widget.PayPwdEditText
                android:id="@+id/et_old_pwd"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入旧密码"
                android:background="@null"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="#ff555555"
                android:textSize="16dp"
                />
            <com.miaomi.fenbei.base.widget.PayPwdEditText
                android:id="@+id/et_new_pwd"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入新密码"
                android:background="@null"
                android:textSize="16dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_close_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭密码"
            android:gravity="center"
            android:padding="30dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:text="确认"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/common_button_enabled_style"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>