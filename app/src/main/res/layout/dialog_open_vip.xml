<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vip_noble_bg"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <ImageView
       android:id="@+id/iv_clean"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dd_dp15"
       android:layout_marginLeft="@dimen/sp10"
       android:src="@drawable/vip_icon_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_centerHorizontal="true"
        android:textColor="#FFE0BD"
        android:text="开通贵族"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="@dimen/dd_dp25"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginRight="@dimen/dd_dp16"
        android:background="@drawable/vip_noble_information_bg"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dd_dp50"
        android:layout_height="@dimen/dd_dp50"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#FFE0BD"
          android:textSize="@dimen/dd_dp16"
          android:text="皇帝"/>
        <TextView
            android:id="@+id/tv_expired_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C2BAB0"
            android:layout_marginTop="@dimen/dd_dp3"
            android:textSize="@dimen/dd_dp12"
            android:text="到期日:2021-07-01"/>
    </LinearLayout>
        <com.miaomi.fenbei.base.widget.DCBTextView
            android:id="@+id/tv_renew_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE0BD"
            android:drawablePadding="@dimen/dd_dp5"
            android:drawableLeft="@drawable/vip_icon_diamond"
            android:layout_marginRight="@dimen/dd_dp15"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dd_dp15"
            android:text="1200000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginRight="@dimen/dd_dp16"
        android:orientation="horizontal">
        <ImageView
          android:layout_width="@dimen/dd_dp40"
          android:layout_height="@dimen/dd_dp20"
          android:src="@drawable/vip_icon_give"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFE0BD"
                android:layout_marginLeft="@dimen/dd_dp10"
                android:layout_weight="1"
                android:textSize="@dimen/dd_dp16"
                android:text="钻石"/>
        <com.miaomi.fenbei.base.widget.DCBTextView
            android:id="@+id/tv_renew_return_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE0BD"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dd_dp15"
            android:text="1200000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginRight="@dimen/dd_dp16"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dd_dp40"
            android:layout_height="@dimen/dd_dp20"
            android:src="@drawable/vip_icon_give"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE0BD"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_weight="1"
            android:textSize="@dimen/dd_dp16"
            android:text="财富值"/>
        <com.miaomi.fenbei.base.widget.DCBTextView
            android:id="@+id/tv_wealth_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE0BD"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dd_dp15"
            android:text="500000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginRight="@dimen/dd_dp16"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_size_24"
        android:background="@drawable/vip_noble_information_bg"
        android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp12"
          android:layout_marginLeft="@dimen/dd_dp15"
          android:textColor="#ffFFEBDF"
          android:text="推荐人 (选填)： "/>
        <EditText
            android:id="@+id/et_invite_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#4cffebdf"
            android:background="@null"
            android:textSize="@dimen/sp12"
            android:hint="请输入ID或靓号"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dd_dp16"
        android:layout_marginLeft="@dimen/dd_dp16"
        android:layout_marginBottom="@dimen/dd_dp20"
        android:layout_marginTop="@dimen/dd_dp40">
        <TextView
        android:id="@+id/tv_fu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dd_dp15"
        android:textColor="#FED2B7"
        android:text="应付: "/>
        <com.miaomi.fenbei.base.widget.DCBTextView
            android:id="@+id/tv_fu_renew_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dd_dp15"
            android:textColor="#FED2B7"
            android:layout_marginLeft="@dimen/sp10"
            android:drawableLeft="@drawable/vip_icon_diamond"
            android:drawablePadding="@dimen/dd_dp5"
            android:layout_toRightOf="@+id/tv_fu"
            android:text="1200000 / 30天"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dd_dp12"
            android:textColor="#4cFFEBDF"
            android:drawablePadding="@dimen/dd_dp5"
           android:layout_marginTop="@dimen/dd_dp5"
            android:layout_below="@+id/tv_fu"
            android:text="开通成功后，推荐人可获得提成收益"/>
        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="111dp"
            android:layout_height="@dimen/dimen_size_44"
            android:layout_alignParentRight="true"
            android:src="@drawable/vip_btn_pay"/>
    </RelativeLayout>
</LinearLayout>