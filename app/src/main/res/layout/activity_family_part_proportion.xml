<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121a2a"
   >
    <include layout="@layout/common_toolbar"/>

    <LinearLayout

        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sp10"
        android:layout_marginLeft="@dimen/dd_dp20"
        android:layout_marginRight="@dimen/dd_dp20"
        android:paddingRight="@dimen/dd_dp15"
        android:paddingLeft="@dimen/dd_dp15"
        android:background="@drawable/bg_family_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_part_70"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:text="70%"
                android:textSize="@dimen/dd_dp15"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView

                android:id="@+id/tv_number_per_70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10人"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dd_dp14"
                android:layout_marginRight="@dimen/dd_dp20"
                android:textColor="#7FFFFFFF"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/f_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#5E2C94"/>
        <LinearLayout
            android:id="@+id/ll_part_60"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:text="60%"
                android:textSize="@dimen/dd_dp15"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_number_per_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10人"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dd_dp14"
                android:layout_marginRight="@dimen/dd_dp20"
                android:textColor="#7FFFFFFF"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/f_icon_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#5E2C94"/>
        <LinearLayout
            android:id="@+id/ll_part_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:text="50%"
                android:textSize="@dimen/dd_dp15"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_number_per_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10人"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dd_dp14"
                android:layout_marginRight="@dimen/dd_dp20"
                android:textColor="#7FFFFFFF"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/f_icon_more"/>
        </LinearLayout>

    </LinearLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#7fFFFFFF"
      android:layout_margin="@dimen/dd_dp20"
      android:textSize="@dimen/dd_dp12"
      android:text="家族长可在该页面设置家族成员的提现分成比例，不同的比例下均可添加成员，添加后立即生效。"/>

</LinearLayout>