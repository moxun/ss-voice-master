<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <com.miaomi.fenbei.base.widget.soulplanets.SoulPlanetsView
        android:id="@+id/soulPlanetView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:autoScrollMode="decelerate"
        app:darkColor="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lightColor="#00ff00"
        app:radiusPercent="0.75"
        app:scrollSpeed="20"/>

    <ImageButton
        android:layout_marginTop="24dp"
        android:layout_width="48dp"
        android:id="@+id/back_btn"
        android:src="@drawable/common_back_arrow_white"
        android:background="@color/transparent"
        android:layout_height="48dp"/>
    <TextView
        android:id="@+id/tv_match"
        android:layout_width="216dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="在线匹配"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:textStyle="bold"
        android:background="@drawable/bg_talk_match_bt"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="96dp"/>
</FrameLayout>