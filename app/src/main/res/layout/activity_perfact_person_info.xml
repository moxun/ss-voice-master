<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121a2a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/toolbar"
            android:layout_marginTop="@dimen/dd_dp25"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageButton
                android:layout_width="48dp"
                android:visibility="invisible"
                android:id="@+id/back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/common_back_arrow_white"
                android:background="@color/transparent"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18dp"
                android:textColor="@color/common_color_toolbar_title"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="跳过"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#80FFFFFF"
                android:textSize="12dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="点击上传头像"
            android:textColor="#999999"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:background="@drawable/bg_perfect_item"
                android:hint="请输入昵称"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:paddingRight="18dp"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_select_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:background="@drawable/bg_perfect_item"
                android:hint="选择生日"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:paddingRight="18dp"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#ffffffff"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/iv_sex_selet_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="@drawable/selector_big_sex_man"
                android:drawableStart="@drawable/base_icon_sex_symbol_man"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="15dp"
                android:text="男生"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/iv_sex_selet_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/selector_big_sex_women"
                android:drawableStart="@drawable/base_icon_new_sex_symbol_female"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="15dp"
                android:text="女生"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:text="性别一旦填写，不可更改"
            android:textColor="#4DFFFFFF"
            android:textSize="10dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请码"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:background="@drawable/bg_perfect_item"
                android:hint="请输入邀请码"
                android:paddingLeft="18dp"
                android:paddingTop="15dp"
                android:paddingRight="18dp"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:text="邀请码非必填项"
            android:textColor="#4DFFFFFF"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/common_button_enabled_style"
            android:gravity="center"
            android:text="进入山水语音"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
