<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg_dialog_common"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="个人信息保护指引"
        android:textColor="#333333"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="top"
        android:lineSpacingExtra="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/user_agreement_notice"
        android:textColor="#555555"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="39dp"
            android:paddingTop="10dp"
            android:paddingEnd="39dp"
            android:paddingBottom="10dp"
            android:text="拒绝"
            android:textColor="#555"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_bg_dialog_bt_right"
            android:gravity="center_horizontal|bottom"
            android:paddingStart="39dp"
            android:paddingTop="10dp"
            android:paddingEnd="39dp"
            android:paddingBottom="10dp"
            android:text="同意"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>


