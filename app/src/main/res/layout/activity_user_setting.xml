<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121a2a"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">


                <TextView
                    android:id="@+id/phone_bind_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="手机绑定"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/pwd_setting_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="密码管理"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/young_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="青少年模式"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:id="@+id/clear_cache_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="清除缓存"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/feedback_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/about_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/update_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="检查更新"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/promis_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="权限管理"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/third_bind_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/room_user_icon_gray_right_point"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="第三方解绑"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/logout_account_ll"
                android:layout_width="match_parent"
                android:layout_height="66dp"

                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"

                    android:gravity="center_vertical"
                    android:text="注销账号"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="永久注销，无法恢复，请谨慎操作"
                    android:textColor="#ffb9b8b9"
                    android:textSize="10dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/exit_tv"
                android:layout_width="315dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_room_bottom_bt"
                android:gravity="center"
                android:text="退出当前账号"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>