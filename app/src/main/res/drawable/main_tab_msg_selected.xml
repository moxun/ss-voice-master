<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="NewApi">

    <!-- 开启状态 -->
    <item
        android:id="@+id/state_on"
        android:state_selected="true"
        android:drawable="@drawable/main_tab_message_checked_25"/>

    <!-- 关闭状态 -->
    <item
        android:id="@+id/state_off"
        android:state_selected="false"
        android:drawable="@drawable/main_tab_message_uncheck"/>

    <!-- 开启切换到关闭的动画 -->
    <transition
        android:fromId="@id/state_on"
        android:toId="@id/state_off">
        <animation-list>
            <item
                android:drawable="@drawable/main_tab_message_uncheck"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_uncheck"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_uncheck"
                android:duration="40"/>

        </animation-list>
    </transition>

    <!-- 关闭切换到开启的动画 -->
    <transition
        android:fromId="@id/state_off"
        android:toId="@id/state_on">
        <animation-list>
            <item
                android:drawable="@drawable/main_tab_message_checked_1"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_checked_2"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_checked_3"
                android:duration="40"/>
