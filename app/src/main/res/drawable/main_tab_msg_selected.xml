                android:drawable="@drawable/main_tab_message_checked_7"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_checked_8"
                android:duration="40"/>
            <item
                android:drawable="@drawable/main_tab_message_checked_9"
                android:duration="40"/>
